doctype 5
html(ng-app="Consultorio")
    head
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //link(rel="icon", type="image/gif", href="/stylesheets/krankenwagen.gif")
    link(rel="shortcut icon", href="/stylesheets/favicon.ico")
    title Consultorio Medico
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.css')
    link(rel='stylesheet',href='/lib/bootstrap/css/bootstrapUbuntu.min.css')
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap-responsive.css')
    link(rel='stylesheet/less',href='/stylesheets/app.less')
    link(rel='stylesheet', href='/stylesheets/styles.css')
    
    block head
    body
        #wrap
            .navbar.navbar-static-top.navbar-inverse#barra
                .navbar-inner
                    a.brand(href='#/index') Consultorio medico
                    ul.nav
                        li#Usuarios
                            a(href='#/indexUser') Usuarios
                        li#Pacientes
                            a(href='#/indexPatient') Pacientes
                        li#Citas
                            a(href='#/indexAppointment') Citas
                        li#Pagos
                            a(href='#/indexPayment') Pagos
                    .pull-right
                        ul(class='nav pull-right')
                            li.dropdown
                                a(href="#", class="dropdown-toggle", data-toggle="dropdown") Usuario
                                    b.caret
                                ul.dropdown-menu
                                    li
                                        a(href="#/user/preferences")
                                            i.icon-cog
                                            | Preferencias
                                    li
                                        a(href="#/help/support")
                                            i.icon-envelope
                                            | Contactar soporte
                                    li.divider
                                    li
                                        a(href="#/auth/logout")
                                            i.icon-off
                                            | Cerrar sesi√≥n
            div.container#content
                block contenido
            #push
        div#footer
            .container-fluid
                p.muted#footer-content
