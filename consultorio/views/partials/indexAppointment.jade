   table#tableAppoint(class="table table-hover",cellpaddin="0",cellspacing="0")
    thead
        th
            strong Paciente
        th
            strong Doctor
        th
            string Servicio
        th
            string Fecha
        th
            string Nota
    tbody
        tr(ng-repeat='app in appointments|filter:query')
            td {{app.namePat}}
            td {{app.nameDoc}}
            td {{app.service}}
            td {{app.date | date:"yyyy-MM-dd HH:mm" }}
            td {{app.notes}}
            //td(data-ng-show="isDoctor")
                a(class="btn btn-success",href="#/recipe")
                    i()
            td
                a(class="btn btn-warning", href="#/modifyAppointment/{{app._id}}")
                    i(class="icon-pencil icon-white")
            td
                a(class="btn btn-danger",bs-popover="/partials/deleteAppointment",data-placement="left")
                    i(class="icon-remove-circle icon-white")