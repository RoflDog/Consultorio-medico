.row-fluid
    .span10
        h3 Cantidad de pacientes: {{patients.length}}
    .span2
        br
        a(class="btn-success btn-large", href='#/addPatient')
            i(class="icon-plus icon-white")
            |&nbsp; Nuevo
.row-fluid Buscar
    input(ng-model="query", type="text", class="input-medium search-query")
br
.row-fluid
    table#tablePatient(class="table table-striped", cellpaddin="0", cellspacing="0")
        thead
            th
                strong Nombre
            th
                strong Apellido
            th
                strong Telefono
            th
                strong Email
            th
                strong Nacimiento
            tr
        tbody(ng-repeat='patient in patients | filter:query')
            tr
                td {{patient.firstname}}
                td {{patient.lastname}}
                td {{patient.phone}}
                td {{patient.email}}
                td {{patient.birthdate}}
                td
                    a(class="btn btn-warning", href="#/modifyPatient/{{patient._id}}")
                        i(class="icon-pencil icon-white")
                td
                    a(class="btn btn-danger",bs-popover="/partials/deletePatient",data-title="{{patient.firstname}} {{patient.lastname}}",data-placement="left")
                        i(class="icon-remove-circle icon-white")