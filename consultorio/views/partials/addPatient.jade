                            tr#noteContent
                                td
                                    input#details.xlarge(type="text",size="30",name="detailNotePatient")
                                td
                                    input#date.xlarge(type="date",name="dateNotePatient")
style(type="text/css")
    .form-horizontal input.ng-invalid.ng-dirty {
        background-color: #FA787E;
    }

    .form-horizontal input.ng-valid.ng-dirty {
        background-color: #a3c9fa;
    }