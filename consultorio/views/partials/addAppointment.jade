form.form-horizontal(name="form")
    fieldset
        legend Nueva cita
        .control-group
            label.control-label(for="inputDoctor") Doctor
            .controls
                select(name="appointDoctor",ng-model='form.DoctorId',required)
                    option(ng-repeat='doctor in doctors', value='{{doctor._id}}') {{doctor.firstname}} {{doctor.lastname}}
        .control-group
            label.control-label(for="inputPatient") Paciente
            .controls
                select(name="appointPatient",ng-model='form.PatientId',required)
                    option(ng-repeat='patient in patients', value='{{patient._id}}') {{patient.firstname}} {{patient.lastname}}

        .control-group
            label.control-label(for="inputDate") Fecha
            .controls
                input#date.xlarge(type="date", size="30", name="appointDate",ng-model='form.date', required)
        .control-group
            label.control-label(for="inputHour") Hora
            .controls
                button(ng-click='obtainFree(form.DoctorId,form.date)') Ver horas
            .controls
                select(name="appointHour",ng-model='form.horaM',ng-options="h | date:'HH:mm' for h in horas",required)
                    option(value='') Elige un Horario
        .control-group
            label.control-label(for="inputService") Servicio
            .controls
                input#service.xlarge(type="text",size="30",name="appointService",ng-model='form.service',required)
        .control-group
            label.control-label(for="inputNote") Nota
            .controls
                input#service.xlarge(height="100",type="text",size="50",name="appointNote",ng-model='form.notes')
        .control-group
            .controls
                button(class="btn-success", ng-click='submitAppoint();') Agregar
                button(class="btn-warning",onclick="location.href='#/indexAppointment'") Cancelar
