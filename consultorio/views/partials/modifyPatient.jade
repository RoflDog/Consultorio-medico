form.form-horizontal
        legend Modificar datos del paciente
        legend Datod personales
        .control-group
            label.control-label(for="inputPatientame") Nombre del paciente
            .controls
                .input-prepend
                    input#firstname.xlarge(type="text", size="30",name="patientName", ng-model='form.firstname')
        .control-group
            label.control-label(for="inputPatientlastname") Apellido del paciente
            .controls
                .input-prepend
                    input#lastname.xlarge(type="text", size="30", name="patientLastname",ng-model='form.lastname')
        .control-group
            label.control-label(for="inputPatientbirthdate") Fecha de nacimiento
            .controls
                .input-prepend
                    span.add-on
                        i.icon-calendar
                    input#date.xlarge(type="text", name="patientBirth",ng-model='form.birthdate')
        legend  Datos de contacto
        .control-group
            label.control-label(for="inputPatientemail") Email
            .controls
                .input-prepend
                    span.add-on
                        i.icon-envelope
                    input#email.xlarge(type="text",size="30",name="patientEmail",ng-model='form.email')
        .control-group
            label.control-label(for="inputPatienttel") Teléfono
            .controls
                .input-prepend
                    input#Phone.xlarge(type="text",,size="30",name="patientPhone",ng-model='form.phone')
        .control-group
            label.control-label(for="inputPatientaddress") Dirección
            .controls
                .input-prepend
                    input#address.xlarge(type="text",size="30",name="addressPatient",ng-model='form.address')
        legend Notas
        .control-group
            label.control-label(for="inputPatientnotes") Notas
            .controls
                table(class="tab")
                    tr(class="row")
                        td
                            input#txtName_1(type="text",value="AC")
                        td
                            input(type="button", class="deleteThisRow",value="Delete")
                        input(class='btnAdd',type="button",value="Agregar notas")&nbsp;
                    script(type="text/javascript")
                        $(document).ready(function(){
                            var clonedRow = $('.row').clone().html();
                            var appendRow = 'tr(class = "row")' + clonedRow;
                            $('.btnAdd').click(function(){
                                $('.tab tr:last').after(appendRow);
                            });
                            $('.deleteThisRow').live('click',function(){
                                var rowLength = $('.row').length;
                                if(rowLength > 1){
                                    deleteRow(this);
                                }else{
                                    $('.tab tr:last').after(appendRow);
                                    deleteRow(this);
                                }
                            });
                            function deleteRow(currentNode){
                                $(currentNode).parent().parent().remove();
                            }
                        });
        input.btn.primary(type="button",value="Modificar",ng-click='modifyPatient()')&nbsp;